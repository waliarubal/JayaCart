<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="JayaCart.Views.SidebarView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:shared="https://github.com/waliarubal/schemas"
    Title="Sidebar"
    shared:ViewModelLocator.AutoWireViewModel="True">
    <ContentPage.Resources>
        <shared:SelectedItemEventArgsToSelectedItemConverter x:Key="TappedItemConverter" />
    </ContentPage.Resources>
    <ListView
        ItemsSource="{Binding Items}"
        SelectionMode="None"
        SeparatorVisibility="None">
        <ListView.Resources>
            <Style TargetType="shared:FontAwesomeIcon">
                <Setter Property="Margin" Value="8,0,0,0" />
                <Setter Property="VerticalTextAlignment" Value="Center" />
            </Style>
        </ListView.Resources>
        <ListView.Behaviors>
            <shared:EventToCommandBehavior
                Command="{Binding OpenViewCommand}"
                Converter="{StaticResource TappedItemConverter}"
                EventName="ItemTapped" />
        </ListView.Behaviors>
        <ListView.Header>
            <Grid Margin="8" HorizontalOptions="FillAndExpand">
                <Grid.Resources>
                    <Style TargetType="Label">
                        <Setter Property="VerticalTextAlignment" Value="Center" />
                        <Setter Property="FontAttributes" Value="Italic" />
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <shared:FontAwesomeIcon Text="{Binding Account.Image}" />
                <Label Grid.Column="1" Text="{Binding Account.FullName, StringFormat='Hello, {0}'}" />
            </Grid>
        </ListView.Header>
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Grid Margin="8,0" HorizontalOptions="FillAndExpand">
                        <Grid.Resources>
                            <Style TargetType="Label">
                                <Setter Property="Margin" Value="8,0" />
                                <Setter Property="VerticalTextAlignment" Value="Center" />
                            </Style>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <shared:FontAwesomeIcon Text="{Binding Image}" />
                        <Label Grid.Column="1" Text="{Binding Title}" />
                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>